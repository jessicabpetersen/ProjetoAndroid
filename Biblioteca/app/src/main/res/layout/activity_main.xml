<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewBook"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/livro"
        android:tint="@android:color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewBook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/oswald"
        android:text="@string/biblioteca"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />


    <EditText
        android:id="@+id/cemail"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@drawable/textfield"
        android:drawableStart="@drawable/ic_person_black_20dp"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/cpassword"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/cemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/textfield"
        android:drawableStart="@drawable/ic_lock_black_20dp"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/cpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="Login" />

    <Button
        android:id="@+id/bt_registar"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_login"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="Registro" />


</RelativeLayout>