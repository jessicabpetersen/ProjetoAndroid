<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".Pesquisa">

    <TextView
        android:id="@+id/textView_pesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/oswald"
        android:text="@string/pesquisa"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/editView_p"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView_pesquisa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/textfield"
        android:hint="Pesquisa"
        android:inputType="text"
        android:textSize="16dp" />


    <Button
        android:id="@+id/pesquisar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editView_p"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/pesquisar"
        android:text="Pesquisar" />

    <TextView
        android:id="@+id/notificacao_pesquisar"
        android:layout_width="179dp"
        android:layout_height="37dp"
        android:layout_below="@+id/pesquisar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="262dp"
        android:textColor="@color/white"/>

</RelativeLayout>